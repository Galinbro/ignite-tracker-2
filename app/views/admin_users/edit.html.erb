<div class="container-fluid">
  <h1 class="mt-4">All Users</h1>
  
  
  <div class="card shadow-lg border-0 rounded-lg">
    <div class="card-header">
      <h3 class="text-center font-weight-light my-4"><%= @user.name %></h3>
    </div>
    <div class="card-body">
      <%= form_for(@user, :url =>{:action => 'update'}) do |f| %>
        <div class="form-group">
          <%= f.label :role_id, class: "form-label" %>
          <%= f.select :role_id, options_for_select(Role.all.collect { | role | [role.name, role.id] }), {}, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.submit class: "btn btn-outline-primary btn-lg"%>
        </div>
      <% end %>
      <div class="card-footer text-center">
        <%= link_to "Back", :back %>
      </div>
    </div>  
  </div> 

</div>